# Database Configuration
DB_HOST=localhost
DB_PORT=5432
DB_NAME=your_database_name
DB_USER=your_database_user
DB_PASSWORD=your_database_password

# JWT Secret
JWT_SECRET=your_jwt_secret_key_here

# Cloudinary Configuration
CLOUDINARY_CLOUD_NAME=your_cloud_name
CLOUDINARY_API_KEY=your_api_key
CLOUDINARY_API_SECRET=your_api_secret

# Email Configuration (Gmail SMTP - works locally)
# For Gmail, you need to:
# 1. Enable 2-Factor Authentication on your Google Account
# 2. Generate an App Password: https://myaccount.google.com/apppasswords
# 3. Use the App Password (not your regular password) in EMAIL_PASSWORD
EMAIL_USER=your-email@gmail.com
EMAIL_PASSWORD=your-app-password-here

# SendGrid Configuration (for production - Render/Vercel)
# SendGrid uses HTTP API instead of SMTP, so it works on platforms that block SMTP ports
# Free tier: 100 emails/day
# 1. Sign up at https://sendgrid.com
# 2. Go to Settings > API Keys > Create API Key
# 3. Give it "Mail Send" permission
# 4. Copy the API key (starts with SG.)
SENDGRID_API_KEY=SG.your-sendgrid-api-key-here
SENDGRID_FROM_EMAIL=noreply@campaignstar.com

# Server Configuration
PORT=5000
NODE_ENV=development
